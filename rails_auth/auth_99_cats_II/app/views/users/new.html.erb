<h1>Create User</h1>

<%# renders flash or flash.now errors %>
<%= render 'shared/errors' %>

<form action="<%= users_url %>" method="POST">
  <%# returns current session token  %>
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>%">
  
  <label for="username">Username</label>
  <input id="username" type="text" name="user[username]" value="<%= @user.username %>">
  <br>

  <label for="password">Password</label>
  <input id="password" type="password" name= "user[password]" value="<%= @user.password %>">
  <br>
  <input type="submit" value="Create User">
</form>
