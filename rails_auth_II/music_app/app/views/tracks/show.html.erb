<h1 class="page-header"><%= @track.title %></h1>
<% 
=begin %> 
  <p id="show-lyrics"><%= @track.lyrics %></p>
<%
=end %>
<%= ugly_lyrics(@track.lyrics) %>

<h4 class='sub-header'><%= @track.notes.count %> Comments</h4>
<% @track.notes.each do |note| %>
  <%= render "notes/note", note: note %>
<% end %>

<%= render "notes/form", track: @track %>

<h3 class='sub-header'>Links</h3>
<ul class='page-links'>
  <li><a class='button' href="<%= edit_track_url(@track) %>">Edit Track</a></li>
  <li>
    <form action="<%= track_url(@track) %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <%= auth_token %>
      <input type="submit" value="Delete Track">
    </form>
  </li>
  <li>
    <a class='button' href="<%= album_url(@track.album) %>">
      Back to <%= @track.album.title %>
    </a>
  </li>
</ul>
